<UserControl x:Class="FitnessON.View.ListUserLeases"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FitnessON.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid Margin="3"
                  ItemsSource="{Binding UserLeases}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Azonosító" Width="*" Binding="{Binding Id}"></DataGridTextColumn>
                <DataGridTextColumn Header="Érvényesség" Width="*" Binding="{Binding LeaseTypes.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Kezdeti dátum" Width="*" Binding="{Binding StartValidity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Lejárati dátum" Width="*" Binding="{Binding EndValidity}"></DataGridTextColumn>
                <DataGridTextColumn Header="Belépések száma" Width="*" Binding="{Binding NumberOfEntries}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
